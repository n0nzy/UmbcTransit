<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.cadextech.crypton.umbctransitguide.plainui.RouteActivity">

    <TextView
        android:id="@+id/route_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:shadowColor="#990033"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:background="#003366"
        android:text="@string/stop_name" />

    <TextView
        android:id="@+id/stops_list_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="5dp"
        android:gravity="center_horizontal"
        android:background="#666666"
        android:textSize="10dp"
        android:textColor="#990033"
        android:text="Stops in this route in the ffg order" />

</LinearLayout>
